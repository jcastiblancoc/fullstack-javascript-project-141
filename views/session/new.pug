extends ../layout.pug

block content
  h2= t('nav.login')
  form(action='/session' method='post' novalidate)
    .mb-3
      label.form-label(for='data_email')= t('form.email')
      if errors && errors.email
        input.form-control.is-invalid(type='email' id='data_email' name='data[email]' value=(values ? values.email : ''))
        div.invalid-feedback.d-block(data-test='validation-error')= errors.email
      else
        input.form-control(type='email' id='data_email' name='data[email]' value=(values ? values.email : ''))
    .mb-3
      label.form-label(for='data_password')= t('form.password')
      if errors && errors.password
        input.form-control.is-invalid(type='password' id='data_password' name='data[password]')
        div.invalid-feedback.d-block(data-test='validation-error')= errors.password
      else
        input.form-control(type='password' id='data_password' name='data[password]')
    button.btn.btn-primary(type='submit')= t('form.signIn')
