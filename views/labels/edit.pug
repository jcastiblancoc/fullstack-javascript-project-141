extends ../layout.pug

block content
  h2 Editar etiqueta
  form(action='/labels/' + label.id method='post' novalidate)
    .mb-3
      label.form-label(for='data_name') Nombre
      input.form-control(type='text' id='data_name' name='data[name]' value=label.name)
    button.btn.btn-primary(type='submit') Actualizar
