extends ../layout.pug

block content
  h2 Nuevo estado
  form(action='/statuses' method='post' novalidate)
    .mb-3
      label.form-label(for='data_name') Nombre
      input.form-control(type='text' id='data_name' name='data[name]' value=(status && status.name ? status.name : '') class=(errors && errors.name ? 'is-invalid' : ''))
      if errors && errors.name
        .invalid-feedback= errors.name
    button.btn.btn-primary(type='submit') Crear
